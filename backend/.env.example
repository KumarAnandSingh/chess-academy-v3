# Database Configuration
# For Railway PostgreSQL, use: ${{ Postgres.DATABASE_URL }}
DATABASE_URL="postgresql://username:password@localhost:5432/chess_academy"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
# Railway will automatically set PORT
PORT=3000
NODE_ENV="production"
# For Railway deployment, set your frontend domain
CORS_ORIGIN="https://your-frontend-domain.com"

# External API Keys
OPENAI_API_KEY="your-openai-api-key"
STOCKFISH_API_URL="http://localhost:8080"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@chessacademy.com"

# File Upload
MAX_FILE_SIZE="5MB"
UPLOAD_DIR="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX="100"

# Security
BCRYPT_ROUNDS=12
COOKIE_SECRET="your-cookie-secret-key"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
# For Railway deployment, set to your Railway domain
GOOGLE_CALLBACK_URL="https://your-backend-domain.railway.app/auth/google/callback"

# Logging
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"